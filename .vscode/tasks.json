{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Avatar: HV=1 SMP=1",
            "type": "shell",
            "command": "make",
            "args": [
                "SMP=1",
                "HV=1"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": {
                "owner": "gcc",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "Build Applications",
            "type": "shell",
            "command": "make",
            "args": [
                "app"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Build",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build Applications",
                "Build Avatar: HV=1 SMP=1"
            ],
            "problemMatcher": []
        }
    ]
}
